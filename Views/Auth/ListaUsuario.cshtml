@model IEnumerable<Tp_inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-people-fill"></i> Lista de Usuarios
        </h1>
        <a class="btn btn-success shadow-sm" asp-action="CrearUsuario">
            <i class="bi bi-person-plus"></i> Agregar Usuario
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td class="fw-bold">@usuario.NombreUsuario</td>
                            <td>@usuario.ApellidoUsuario</td>
                            <td>@usuario.Email</td>
                            <td>

                                @if (usuario.RolUsuario == "ADMIN")
                                {
                                    <span class="badge bg-info text-dark">@usuario.RolUsuario</span>
                                }
                                else
                                {
                                    <span class="badge bg-success text-dark">@usuario.RolUsuario</span>
                                }

                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light border shadow-sm dropdown-toggle" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3">
                                        <li>
                                            <a class="dropdown-item text-primary" asp-action="EditarUsuario"
                                                asp-route-id="@usuario.Id">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-action="EliminarUsuario" asp-route-id="@usuario.Id" method="post"
                                                onsubmit="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>