@model IEnumerable<Tp_inmobiliaria.Models.Usuario>
@{
    ViewData["Title"] = "Login";
    ViewData["OcultarHeader"] = true;
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="~/images/CLEVER.png" alt="Logo CLEVER" 
                         class="img-fluid mb-3" style="max-height: 120px;">
                    <h2 class="fw-bold">Iniciar sesión</h2>
                    <p class="text-muted">Accedé con tu cuenta</p>
                </div>

                <form asp-action="Login" method="post">
                    <div class="mb-4">
                        <label for="email" class="form-label fw-semibold">Email</label>
                        <input type="email" name="email" 
                               class="form-control form-control-lg rounded-3" 
                               placeholder="ejemplo@mail.com" required />
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label fw-semibold">Contraseña</label>
                        <input type="password" name="password" 
                               class="form-control form-control-lg rounded-3" 
                               placeholder="••••••••" required />
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" 
                                class="btn btn-primary btn-lg rounded-3 shadow-sm">
                            Ingresar
                        </button>
                    </div>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-4 text-center rounded-3">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</div>
