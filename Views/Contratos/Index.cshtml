@model IEnumerable<Tp_inmobiliaria.Models.Contratos>
@{
    ViewData["Title"] = "Contratos";
}
<div class="text-center">
    <h1 class="display-4">Lista de Contratos</h1>
</div>

<div class="mb-3">
    <a type="button" class="btn btn-primary" asp-action="AgregarContrato">Agregar Contatos</a>
</div>
<table class="table table-striped, table table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Inquilino</th>
            <th>Inmuebel</th>
            <th>Fecha Incicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            @if(User.IsInRole("ADMIN")){
            <th>Creador</th>
            <th>Finalizador</th>
            }
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contratos p in Model)
        {
            <tr>
                <td>@p.id</td>
                <td>@p.NombreInquilino</td>
                <td>@p.DireccionInmueble</td>
                <td>@p.fecha_inicio</td>
                <td>@p.fecha_fin</td>
                <td>@p.monto_mensual</td>
                @if(User.IsInRole("ADMIN")){
                <td>@p.NombreCreador @p.ApellidoCreador</td>
                <td>@p.NombreFinalizador @p.ApellidoFinalizador</td>
                }
                <td>
                    <a class="btn btn-primary btn-sm me-1" asp-action="EditarContrato" asp-route-id="@p.id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-info btn-sm" asp-action="Renovar" asp-route-id="@p.id">
                    <i class="bi bi-file-earmark-plus"></i> 
                    </a>
                    <a class="btn btn-warning btn-sm" asp-action="Rescindir" asp-route-id="@p.id">
                         <i class="bi bi-exclamation-triangle"></i> Rescindir
                            </a>
                    @if (User.IsInRole("ADMIN"))
                    {
                        <a class="btn btn-danger btn-sm" asp-action="EliminarContrato" asp-route-id="@p.id" onclick="return confirm('Â¿Seguro que quieres ELIMINAR este Contrato?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>