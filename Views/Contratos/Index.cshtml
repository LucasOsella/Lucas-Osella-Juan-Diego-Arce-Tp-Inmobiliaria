@model IEnumerable<Tp_inmobiliaria.Models.Contratos>
@{
    ViewData["Title"] = "Contratos";
}
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">
            <i class="bi bi-clipboard-check"></i> Lista de Contratos
        </h1>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a type="button" class="btn btn-success shadow-sm" asp-action="AgregarContrato">
            <i class="bi bi-plus-circle"></i> Agregar Contrato
        </a>
    </div>

    <div class="table-responsive shadow rounded-3">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Inquilino</th>
                    <th>Inmueble</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Monto Mes</th>
                    @if (User.IsInRole("ADMIN"))
                    {
                        <th>Creador</th>
                        <th>Finalizador</th>
                    }
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Contratos p in Model)
                {
                    <tr>
                        <td>@p.id</td>
                        <td>@p.NombreInquilino</td>
                        <td>@p.DireccionInmueble</td>
                        <td>@p.fecha_inicio.ToShortDateString()</td>
                        <td>@p.fecha_fin.ToShortDateString()</td>
                        <td>$@p.monto_mensual</td>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <td>@p.NombreCreador @p.ApellidoCreador</td>
                            <td>@p.NombreFinalizador @p.ApellidoFinalizador</td>
                        }
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu shadow">
                                    <li>
                                        <a class="dropdown-item text-primary" asp-action="EditarContrato" asp-route-id="@p.id">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-info" asp-action="Renovar" asp-route-id="@p.id">
                                            <i class="bi bi-file-earmark-plus"></i> Renovar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-warning" asp-action="Rescindir" asp-route-id="@p.id">
                                            <i class="bi bi-exclamation-triangle"></i> Rescindir
                                        </a>
                                    </li>
                                    @if (User.IsInRole("ADMIN"))
                                    {
                                        <li>
                                            <a class="dropdown-item text-danger" asp-action="EliminarContrato" asp-route-id="@p.id"
                                               onclick="return confirm('Â¿Seguro que quieres ELIMINAR este Contrato?');">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
