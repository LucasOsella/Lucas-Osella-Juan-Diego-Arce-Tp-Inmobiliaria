@model IEnumerable<Tp_inmobiliaria.Models.Contratos>
@{
    ViewData["Title"] = "Contratos";
}
<div class="text-center">
    <h1 class="display-4">Lista de Contratos</h1>
</div>

<div class="mb-3">
        <a type="button" class="btn btn-primary" asp-action="AgregarContrato">Agregar Contatos</a>
</div>
<table class="table table-striped, table table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Inquilino</th>
            <th>Inmuebel</th>
            <th>Fecha Incicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Creador</th>
            <th>Finalizador</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Contratos p in Model)
    {
        <tr>
            <td>@p.id</td>
            <td>@p.id_inquilino</td>
            <td>@p.id_inmueble</td>
            <td>@p.fecha_inicio</td>
            <td>@p.fecha_fin</td>
            <td>@p.monto_mensual</td>
            <td>@p.id_creador</td>
            <td>@p.id_finalizador</td>
            <td>
                <a class="btn btn-primary btn-sm me-1" asp-action="EditarContrato" asp-route-id="@p.id">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a class="btn btn-danger btn-sm" asp-action="EliminarContrato" asp-route-id="@p.id">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>