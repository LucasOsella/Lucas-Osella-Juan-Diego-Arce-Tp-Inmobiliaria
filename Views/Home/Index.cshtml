@{
    ViewData["Title"] = "Inicio";
}
@using System.Security.Claims

<div class="container mt-5">
    <div class="row mt-4">
        <!-- Propietarios -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded-3 border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle text-primary display-5"></i>
                    <h4 class="card-title mt-2">Propietarios</h4>
                    <p class="card-text">Gestiona los propietarios: agregar, editar y eliminar registros.</p>
                    <a asp-controller="Propietarios" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Propietarios
                    </a>
                </div>
            </div>
        </div>

        <!-- Inquilinos -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded-3 border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill text-success display-5"></i>
                    <h4 class="card-title mt-2">Inquilinos</h4>
                    <p class="card-text">Administra los inquilinos registrados en el sistema.</p>
                    <a asp-controller="Inquilinos" asp-action="Index" class="btn btn-success">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Inquilinos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Inmuebles -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded-3 border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-building text-success display-5"></i>
                    <h4 class="card-title mt-2">Inmuebles</h4>
                    <p class="card-text">Gestiona la información de los inmuebles disponibles.</p>
                    <a asp-controller="Inmuebles" asp-action="Index" class="btn btn-success">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Inmuebles
                    </a>
                </div>
            </div>
        </div>

        <!-- Contratos -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded-3 border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-check text-primary display-5"></i>
                    <h4 class="card-title mt-2">Contratos</h4>
                    <p class="card-text">Consulta y administra los contratos de alquiler.</p>
                    <a asp-controller="Contratos" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Contratos
                    </a>
                </div>
            </div>
        </div>

        <!-- Pagos -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm rounded-3 border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin text-warning display-5"></i>
                    <h4 class="card-title mt-2">Pagos</h4>
                    <p class="card-text">Registra, consulta y administra los pagos de los contratos.</p>
                    <a asp-controller="Pagos" asp-action="Index" class="btn btn-warning text-dark">
                        <i class="bi bi-arrow-right-circle"></i> Ir a Pagos
                    </a>
                </div>
            </div>
        </div>

        <!-- Usuarios o Perfil -->
        <div class="col-md-6 mb-4">
            @if(User.IsInRole("ADMIN")){            
                <div class="card shadow-sm rounded-3 border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-people-fill text-success display-5"></i>
                        <h4 class="card-title mt-2">Usuarios</h4>
                        <p class="card-text">Consulta y administra los usuarios.</p>
                        <a asp-controller="Auth" asp-action="ListaUsuario" class="btn btn-success">
                            <i class="bi bi-arrow-right-circle"></i> Gestionar Usuarios
                        </a>
                    </div>
                </div>
            } 
            @if(User.IsInRole("EMPLEADO")){
                <div class="card shadow-sm rounded-3 border-0 h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-person-badge text-primary display-5"></i>
                        <h4 class="card-title mt-2">Perfil</h4>
                        <p class="card-text">Gestiona tu perfil personal.</p>
                        <a asp-controller="Auth" asp-action="EditarUsuario" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" 
                           class="btn btn-primary">
                            <i class="bi bi-arrow-right-circle"></i> Mi Perfil
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
