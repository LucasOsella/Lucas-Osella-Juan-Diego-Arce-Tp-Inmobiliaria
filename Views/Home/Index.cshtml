@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Sistema Inmobiliario</h1>
    <p class="text-center text-muted">Bienvenido, selecciona una opción para comenzar:</p>

    <div class="row mt-4">
        <!-- Propietarios -->
        <div class="col-md-6 mb-4">
            <div class="card shadow rounded-3">
                <div class="card-body text-center">
                    <h4 class="card-title">Propietarios</h4>
                    <p class="card-text">Gestiona los propietarios: agregar, editar y eliminar registros.</p>
                    <a asp-controller="Propietarios" asp-action="Index" class="btn btn-primary">Ir a Propietarios</a>
                </div>
            </div>
        </div>

        <!-- Inquilinos -->
        <div class="col-md-6 mb-4">
            <div class="card shadow rounded-3">
                <div class="card-body text-center">
                    <h4 class="card-title">Inquilinos</h4>
                    <p class="card-text">Administra los inquilinos registrados en el sistema.</p>
                    <a asp-controller="Inquilinos" asp-action="Index" class="btn btn-success">Ir a Inquilinos</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección opcional para ampliar -->
    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow rounded-3">
                <div class="card-body text-center">
                    <h4 class="card-title">Inmuebles</h4>
                    <p class="card-text">Gestiona la información de los inmuebles disponibles.</p>
                    <a asp-controller="Inmuebles" asp-action="Index" class="btn btn-warning">Ir a Inmuebles</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow rounded-3">
                <div class="card-body text-center">
                    <h4 class="card-title">Contratos</h4>
                    <p class="card-text">Consulta y administra los contratos de alquiler.</p>
                    <a asp-controller="Contratos" asp-action="Index" class="btn btn-info">Ir a Contratos</a>
                </div>
            </div>
        </div>
    </div>
</div>

