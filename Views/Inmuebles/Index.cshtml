@model IEnumerable<Tp_inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<div class="text-center">
    <h1 class="display-4">Lista de Inmuebles</h1>
</div>

<div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
    <div class="btn-group">
        <a type="button" class="btn btn-success" asp-action="AgregarInmueble">Agregar Inmueble</a>
        <a type="button" class="btn btn-success" asp-controller="TipoInmueble" asp-action="Index">Tipos de inmuebles</a>
        <a type="button" class="btn btn-secondary" asp-action="Index">Borrar Filtros</a>
    </div>

    <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownFechas"
            data-bs-toggle="dropdown" aria-expanded="false">
            Filtrar por fecha
        </button>
        <div class="dropdown-menu p-4 shadow rounded-3" aria-labelledby="dropdownFechas" style="min-width: 300px;">
            <form asp-action="FiltrarPorFecha" method="get" class="d-flex flex-column gap-3">
                <div>
                    <label for="fecha_inicio" class="form-label">Fecha inicio</label>
                    <input type="date" id="fecha_inicio" name="fecha_inicio" class="form-control" />
                </div>
                <div>
                    <label for="fecha_fin" class="form-label">Fecha fin</label>
                    <input type="date" id="fecha_fin" name="fecha_fin" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Filtrar
                </button>
            </form>
        </div>
    </div>
</div>

@if (ViewBag.FechaInicio != null && ViewBag.FechaFin != null)
{
    <div class="alert alert-info" role="alert">
        Filtrado por fecha: Desde <strong>@(((DateTime)ViewBag.FechaInicio).ToString("dd-MM-yyyy"))</strong> hasta
        <strong>@(((DateTime)ViewBag.FechaFin).ToString("dd-MM-yyyy"))</strong>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Dirección</th>
            <th>Uso</th>
            <th>Ambientes</th>
            <th>Coordenadas</th>
            <th>Precio</th>
            <th class="dropdown">
                <div class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;">
                    Estado
                </div>
                <div class="dropdown-menu">
                    <a class="dropdown-item" asp-action="Index" asp-route-estado="">Todos</a>
                    <a class="dropdown-item" asp-action="Filtrar" asp-route-estado="DISPONIBLE">Disponibles</a>
                    <a class="dropdown-item" asp-action="Filtrar" asp-route-estado="OCUPADO">Ocupados</a>
                </div>
            </th>
            <th>Propietario</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Direccion</td>
                <td>@i.Uso</td>
                <td>@i.Ambientes</td>
                <td>@i.Coordenadas</td>
                <td>@i.Precio</td>
                <td>@i.Estado</td>
                <td>@i.Propietario</td>
                <td>@i.TipoInmueble</td>
                <td class="dropdown text-center">
                    <div class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;">
                        <i class="bi bi-three-dots"></i>
                    </div>
                    <ul class="dropdown-menu shadow">
                        <li>
                            <a class="dropdown-item text-success" asp-action="EditarInmueble" asp-route-id="@i.Id">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                        </li>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li>
                                <a class="dropdown-item text-danger" asp-action="EliminarInmueble" asp-route-id="@i.Id"
                                    onclick="return confirm('¿Seguro que quieres ELIMINAR este Inmueble?');">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </li>
                        }
                    </ul>
                </td>

            </tr>
        }
    </tbody>
</table>