@model Tp_inmobiliaria.Models.Inquilinos

@{
    ViewData["Title"] = "Nuevo Inquilino";
}

<div class="card shadow-sm p-4 mx-auto" style="max-width: 500px; border-radius: 12px; background-color: #fefefe;">
    <h4 class="mb-4 text-center">Registrar Inquilino</h4>

    <form asp-action="GuardarInquilino" method="post">
        <div class="form-group mb-3">
            <label asp-for="Dni"></label>
            <input asp-for="Dni" class="form-control" type="number" />
            <span asp-validation-for="Dni" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

