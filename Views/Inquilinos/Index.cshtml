@model IEnumerable<Tp_inmobiliaria.Models.Inquilinos>
@{
    ViewData["Title"] = "Inquilinos";
}

<div class="text-center">
    <h1 class="display-4">Lista de Inquilinos</h1>
</div>
<div class="mb-3">
    <a type="button" class="btn btn-success" asp-action="AgregarInquilino">Agregar Inquilino</a>
</div>
<table class="table table-striped,  table table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Dni</td>
                <td>@p.Nombre</td>
                <td>@p.Telefono</td>
                <td>@p.Email</td>
                <td>@p.Direccion</td>
                <td class="dropdown text-center">
                    <div class="dropdown-toggle" data-bs-toggle="dropdown" style="cursor: pointer;">
                        <i class="bi bi-three-dots"></i>
                    </div>
                    <ul class="dropdown-menu shadow">
                        @if (User.IsInRole("ADMIN") || User.IsInRole("EMPLEADO"))
                        {
                            <li>
                                <a class="dropdown-item text-success" asp-action="EditarInquilino" asp-route-id="@p.Id">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li>
                                <a class="dropdown-item text-danger" asp-action="EliminarInquilino" asp-route-id="@p.Id"
                                    onclick="return confirm('¿Seguro que quieres ELIMINAR este Inquilino?');">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </li>
                        }
                    </ul>
                </td>

            </tr>
        }
    </tbody>
</table>