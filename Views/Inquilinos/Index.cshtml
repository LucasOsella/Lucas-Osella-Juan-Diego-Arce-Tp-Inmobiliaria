@model IEnumerable<Tp_inmobiliaria.Models.Inquilinos>
@{
    ViewData["Title"] = "Inquilinos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-success">
            <i class="bi bi-person-fill"></i> Lista de Inquilinos
        </h1>
        <a asp-action="AgregarInquilino" class="btn btn-success shadow-sm">
            <i class="bi bi-person-plus"></i> Agregar Inquilino
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-success text-center">
                    <tr>
                        <th>ID</th>
                        <th>DNI</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Dirección</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td class="fw-bold text-center">@p.Id</td>
                            <td class="text-center">@p.Dni</td>
                            <td>@p.Nombre</td>
                            <td>@p.Telefono</td>
                            <td>@p.Email</td>
                            <td>@p.Direccion</td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light border shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3">
                                        @if (User.IsInRole("ADMIN") || User.IsInRole("EMPLEADO"))
                                        {
                                            <li>
                                                <a class="dropdown-item text-primary" asp-action="EditarInquilino" asp-route-id="@p.Id">
                                                    <i class="bi bi-pencil-square"></i> Editar
                                                </a>
                                            </li>
                                        }
                                        @if (User.IsInRole("ADMIN"))
                                        {
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="EliminarInquilino" asp-route-id="@p.Id"
                                                   onclick="return confirm('¿Seguro que quieres eliminar este inquilino?');">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
