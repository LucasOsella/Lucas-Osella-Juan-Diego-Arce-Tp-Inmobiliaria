@model Tp_inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Agregar Pago";
    var contratos = ViewBag.Contratos as List<Tp_inmobiliaria.Models.Contratos>;
    var usuarios = ViewBag.Usuarios as List<Tp_inmobiliaria.Models.Usuario>;
}

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px; border-radius: 12px; background-color: #f9f9f9;">
    <h4 class="mb-4 text-center">Registrar Pago</h4>

    <form asp-action="GuardarPago" method="post">
        <div class="mb-3">
            <label class="form-label">Contrato</label>
            <select asp-for="id_contrato" class="form-select">
                <option value="">-- Seleccionar --</option>
                @foreach (var contrato in contratos)
                {
                    <option value="@contrato.id">@contrato.id</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">NÃºmero de Pago</label>
            <input asp-for="numero_pago" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <input asp-for="fecha_pago" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Detalle</label>
            <input asp-for="detalle" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Importe</label>
            <input asp-for="importe" type="number" step="0.01" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <select asp-for="estado" class="form-select">
                <option value="ACTIVO">ACTIVO</option>
                <option value="ANULADO">FINALIZADO</option>
                <option value="PENDIENTE">PENDIENTE</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Usuario Creador</label>
            <select asp-for="id_usuario_creador" class="form-select">
                <option value="">-- Seleccionar --</option>
                @foreach (var usuario in usuarios)
                {
                    <option value="@usuario.Id">@usuario.NombreUsuario</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Usuario Finalizador (opcional)</label>
            <select asp-for="id_usuario_finalizador" class="form-select">
                <option value="">-- Seleccionar --</option>
                @foreach (var usuario in usuarios)
                {
                    <option value="@usuario.Id">@usuario.NombreUsuario</option>
                }
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
