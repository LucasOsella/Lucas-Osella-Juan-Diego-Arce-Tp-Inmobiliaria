@model Tp_inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
    var contratos = ViewBag.Contratos as List<Tp_inmobiliaria.Models.Contratos>;
    var usuarios = ViewBag.Usuarios as List<Tp_inmobiliaria.Models.Usuario>;
}

<div class="card shadow-sm p-4 mx-auto" style="max-width: 600px; border-radius: 12px; background-color: #fefefe;">
    <h4 class="mb-4 text-center">Editar Pago</h4>

    <form asp-action="GuardarEdicionPago" method="post">
        <input type="hidden" asp-for="id" />

        <div class="mb-3">
            <label class="form-label">Contrato</label>
            <input asp-for="id_contrato" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">NÃºmero de Pago</label>
            <input asp-for="numero_pago" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <input asp-for="fecha_pago" type="date" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Detalle</label>
            <input asp-for="detalle" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Importe</label>
            <input asp-for="importe" type="number" step="0.01" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Estado</label>
            <input asp-for="estado" class="form-control" readonly />
        </div>

        <input asp-for="id_usuario_creador" hidden />
        <input asp-for="id_usuario_finalizador" hidden />
        <input asp-for="id_contrato" hidden />

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
