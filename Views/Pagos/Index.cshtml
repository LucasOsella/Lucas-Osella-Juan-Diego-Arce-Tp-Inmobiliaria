@model IEnumerable<Tp_inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h2 class="mb-4">Lista de Pagos</h2>

<a asp-action="AgregarPago" class="btn btn-primary mb-3">Agregar Pago</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Contrato</th>
            <th>Número Pago</th>
            <th>Fecha</th>
            <th>Detalle</th>
            <th>Importe</th>
            <th>Estado</th>
            @if (User.IsInRole("ADMIN"))
            {
                <th>Creador</th>
                <th>Finalizador</th>
            }
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.id</td>
                <td>@pago.id_contrato</td>
                <td>@pago.numero_pago</td>
                <td>@pago.fecha_pago.ToString("dd/MM/yyyy")</td>
                <td>@pago.detalle</td>
                <td>$@pago.importe</td>
                <td>@pago.estado</td>
                @if (User.IsInRole("ADMIN"))
                {
                    <td>@pago.NombreCreador @pago.ApellidoCreador </td>
                    <td>@pago.NombreFinalizador @pago.ApellidoFinalizador</td>
                }
                <td class="dropdown text-center">
                    <div class="dropdown-toggle" data-bs-toggle="dropdown" style="cursor: pointer;">
                        <i class="bi bi-three-dots"></i>
                    </div>
                    <ul class="dropdown-menu shadow">
                        <li>
                            <a class="dropdown-item text-warning" asp-action="EditarPago" asp-route-id="@pago.id">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                        </li>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li>
                                <a class="dropdown-item text-danger" asp-action="EliminarPago" asp-route-id="@pago.id"
                                    onclick="return confirm('¿Seguro que quieres anular este pago?');">
                                    <i class="bi bi-trash"></i> Anular
                                </a>
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>