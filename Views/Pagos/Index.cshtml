@model IEnumerable<Tp_inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-cash-stack"></i> Lista de Pagos
        </h1>
        <a asp-action="AgregarPago" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Agregar Pago
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th>ID</th>
                        <th>Contrato</th>
                        <th>N° Pago</th>
                        <th>Fecha</th>
                        <th>Detalle</th>
                        <th>Importe</th>
                        <th>Estado</th>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <th>Creador</th>
                            <th>Finalizador</th>
                        }
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pago in Model)
                    {
                        <tr>
                            <td class="fw-bold text-center">@pago.id</td>
                            <td class="text-center">@pago.id_contrato</td>
                            <td class="text-center">@pago.numero_pago</td>
                            <td class="text-center">@pago.fecha_pago.ToString("dd/MM/yyyy")</td>
                            <td>@pago.detalle</td>
                            <td class="fw-semibold text-success">$@pago.importe</td>
                            <td>
                                @if (pago.estado == "ACTIVO")
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else if (pago.estado == "PENDIENTE")
                                {
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Anulado</span>
                                }
                            </td>
                            @if (User.IsInRole("ADMIN"))
                            {
                                <td>@pago.NombreCreador @pago.ApellidoCreador</td>
                                <td>@pago.NombreFinalizador @pago.ApellidoFinalizador</td>
                            }
                            <td class="text-center">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light border shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3">
                                        <li>
                                            <a class="dropdown-item text-warning" asp-action="EditarPago" asp-route-id="@pago.id">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                        </li>
                                        @if (User.IsInRole("ADMIN"))
                                        {
                                            <li>
                                                <a class="dropdown-item text-danger" asp-action="EliminarPago" asp-route-id="@pago.id"
                                                   onclick="return confirm('¿Seguro que quieres anular este pago?');">
                                                    <i class="bi bi-x-circle"></i> Anular
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
