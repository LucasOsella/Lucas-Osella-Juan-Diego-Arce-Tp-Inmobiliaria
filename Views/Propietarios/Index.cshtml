@model IEnumerable<Tp_inmobiliaria.Models.Propietario>
@{
    ViewData["Title"] = "Propietario";
}

<div class="text-center">
    <h1 class="display-4">Lista de Propietarios</h1>
</div>
<div class="mb-3">
        <a type="button" class="btn btn-primary" asp-action="AgregarPropietario">Agregar Propietario</a>
</div>
<table class="table table-striped, table table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Dni</td>
            <td>@p.Apellido</td>
            <td>@p.Nombre</td>
            <td>@p.Telefono</td>
            <td>@p.Email</td>
            <td>@p.Direccion</td>
            <td>
                <a class="btn btn-primary btn-sm me-1" asp-action="EditarPropietario" asp-route-id="@p.Id">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                @if(User.IsInRole("ADMIN")){
                <a class="btn btn-danger btn-sm" asp-action="EliminarPropietario" asp-route-id="@p.Id">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>