@model IEnumerable<Tp_inmobiliaria.Models.Propietario>
@{
    ViewData["Title"] = "Propietario";
}

<div class="text-center">
    <h1 class="display-4">Lista de Propietarios</h1>
</div>
<div class="mb-3">
    <a type="button" class="btn btn-primary" asp-action="AgregarPropietario">Agregar Propietario</a>
</div>
<table class="table table-striped, table table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Dni</td>
                <td>@p.Apellido</td>
                <td>@p.Nombre</td>
                <td>@p.Telefono</td>
                <td>@p.Email</td>
                <td>@p.Direccion</td>
                <td class="dropdown text-center">
                    <div class="dropdown-toggle" data-bs-toggle="dropdown" style="cursor: pointer;">
                        <i class="bi bi-three-dots"></i>
                    </div>
                    <ul class="dropdown-menu shadow">
                        <li>
                            <a class="dropdown-item text-primary" asp-action="EditarPropietario" asp-route-id="@p.Id">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                        </li>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li>
                                <a class="dropdown-item text-danger" asp-action="EliminarPropietario" asp-route-id="@p.Id"
                                    onclick="return confirm('¿Seguro que quieres ELIMINAR este Propietario?');">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </li>
                        }
                    </ul>
                </td>

            </tr>
        }
    </tbody>
</table>