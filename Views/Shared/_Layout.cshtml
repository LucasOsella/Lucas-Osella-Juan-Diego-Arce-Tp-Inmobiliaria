<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]- Inmobiliaria</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tp_inmobiliaria.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    @if (!(ViewBag.OcultarHeader ?? false))
{
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 custom-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/CLEVER.png" alt="Logo" height="50">
            </a>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CLEVER</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 link-opacity-100-hover">
                    
                    <li class="nav-item">
                        <a class="nav-link text-dark link-opacity-100-hover" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link text-dark link-opacity-100-hover" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    
                    <!-- Dropdown Propietarios -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="propietariosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Propietarios
                        </a>
                            <ul class="dropdown-menu shadow-lg rounded-3" aria-labelledby="propietariosDropdown">
                            <li><a class="dropdown-item link-opacity-100-hover" asp-controller="Propietarios" asp-action="Index">Ver Propietarios</a></li>
                            <li><a class="dropdown-item link-opacity-100-hover" asp-controller="Propietarios" asp-action="AgregarPropietario">Agregar Propietario</a></li>
                        </ul>
                    </li>
                    
                    <!-- Dropdown Inquilinos -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="inquilinosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Inquilinos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="inquilinosDropdown">
                            <li><a class="dropdown-item  link-opacity-100-hover" asp-controller="Inquilinos" asp-action="Index">Ver Inquilinos</a></li>
                            <li><a class="dropdown-item  link-opacity-100-hover" asp-controller="Inquilinos" asp-action="AgregarInquilino">Agregar Inquilino</a></li>
                        </ul>
                    </li>
                    
                    <!-- Dropdown Inmuebles -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="inmueblesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Inmuebles
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="inmueblesDropdown">
                            <li><a class="dropdown-item  link-opacity-100-hover" asp-controller="Inmuebles" asp-action="Index">Ver Inmuebles</a></li>
                            <li><a class="dropdown-item  link-opacity-100-hover" asp-controller="Inmuebles" asp-action="AgregarInmueble">Agregar Inmueble</a></li>
                        </ul>
                    </li>
                    <!-- Dropdown Contratos --> 
                    <li>
                    <l class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="contratosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Contratos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="contratosDropdown">
                            <li><a class="dropdown-item  link-opacity-100-hover" asp-controller="Contratos" asp-action="Index">Ver Contratos</a></li>
                            <li><a class="dropdown-item  link-opacity-100-hover" asp-controller="Contratos" asp-action="AgregarContrato">Agregar Contrato</a></li>
                        </ul>
                    </li>
                    <!-- Dropdown Usuarios -->
                    <li class="nav-item d-flex align-items-center gap-2">
                        <!-- Foto de usuario -->
                        <img src="@User.FindFirst("fotoUsuario")?.Value" 
                            alt="Foto de usuario" 
                            class="rounded-circle" 
                            style="width: 40px; height: 40px; object-fit: cover;">

                        <!-- Nombre y rol -->
                        <div class="d-flex flex-column">
                            <span class="fw-bold">@User.Identity.Name</span>
                            <small class="text-muted">
                                @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                            </small>
                        </div>

                        <!-- Botón de Logout -->
                        <a class="btn btn-outline-danger btn-sm ms-auto" 
                        asp-controller="Auth" 
                        asp-action="Logout">
                            Logout
                        </a>
                    </li>
            </div>
        </div>
    </nav>
</header>
}
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Tp_inmobiliaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
